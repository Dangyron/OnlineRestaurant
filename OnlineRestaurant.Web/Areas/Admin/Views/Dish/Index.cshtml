@model List<DishModel>

<div class="container w-50">
    <input name="id" hidden />
    <div class="d-flex justify-content-center">
        <div>
            <h2 class="text-success">Dishes List</h2>
        </div>

    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Dish Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        @foreach (var elem in Model.OrderBy(i => i.Id))
        {
            <tr>
                <td>@elem.Name</td>
                <td>@elem.Description</td>
                <td>@elem.Price</td>
                <th>@elem.Category.Title</th>
                <td>
                    <div class="d-flex justify-content-end">
                        <a asp-controller="Dish" asp-action="Edit" asp-route-id="@elem.Id" class="btn btn-primary m-1"><i class="bi bi-pencil"></i></a>
                        <a onclick="Delete('/admin/dishes/delete/@elem.Id')" class="btn btn-danger m-1"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="d-flex justify-content-center mt-1">
        <div>
            <a asp-controller="Dish" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i> Add dish</a>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/site.js"></script>
}
