@model DishViewModel

<div class="container w-50">
    <form method="post">
        <input asp-for="Dish.Id" hidden/>
        <div class="p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-success pb-3 text-center">Edit dish</h2>
            </div>
            <div class="row mb-2 p-1">
                <label asp-for="Dish.Name" class="p-0"></label>
                <input asp-for="Dish.Name" class="form-control"/>
                <span asp-validation-for="Dish.Name" class="text-danger"></span>
            </div>

            <div class="row mb-2 p-1">
                <label asp-for="Dish.Description" class="p-0"></label>
                <input asp-for="Dish.Description" class="form-control"/>
                <span asp-validation-for="Dish.Description" class="text-danger"></span>
            </div>

            <div class="row mb-2 p-1">
                <label asp-for="Dish.Price" class="p-0"></label>
                <input asp-for="Dish.Price" class="form-control"/>
                <span asp-validation-for="Dish.Price" class="text-danger"></span>
            </div>

            <div class="row mb-2 p-1">
                <label class="p-0">Choose category</label>
                <select asp-for="@Model.Dish.CategoryId" asp-items="@Model.Categories" class="form-select border-0 shadow">
                    <option disabled selected>--Select Category--</option>
                </select>
                <span asp-validation-for="Dish.CategoryId" class="text-danger"></span>
            </div>

            <div class="row mb-2 p-1">
                <label class="p-0">Add pictures</label>
                <input type="file" name="files" class="form-control border-0 shadow"/>
            </div>

            <div class="row d-flex justify-content-center">
                <div class="col-6 col-md-3 align-content-md-center">
                    <button type="submit" class="btn btn-warning form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a class="btn btn-outline-light form-control" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}